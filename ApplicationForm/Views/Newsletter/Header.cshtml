@model ApplicationForm.Models.ApplyModel
@{
    Layout = null;
}

<header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Subscribe to our monthly newsletter!</h1>
                <h2>This month special is about our favorite, the Greenfinch.</h2>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form>
                    <div class="form-row">
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input id="newsletterEmail" type="email" class="form-control form-control-lg" placeholder="Enter your email...">
                        </div>
                        <div class="col-12 col-md-3">
                            <a class="btn btn-block btn btn-primary" 
                               id="newsletterSignIn"
                               onclick="$.newsletter.apply()">Sign up!</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>


